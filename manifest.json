{
  "name": "bbscrawler",
  "version": "1.0.0",
  "icons": {
    "128": "res/img/community_128px.png",
    "32": "res/img/community_32px.png",
    "64": "res/img/community_64px.png"
  },
  "browser_action": {
    "default_title": "bbscrawler",
    "default_icon": "res/img/community_32px.png",
    "default_popup": "res/html/index.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "res/js/jquery-3.3.1.js",
      "res/js/background.js"
    ]
  },
  "default_locale": "zh_CN",
  "description": "bbs crawler",
  "manifest_version": 2,
  "minimum_chrome_version": "26.0",
  "options_page": "res/html/options.html",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "notifications",
    "proxy"
  ]
}
